   
    <% @pets.each do |pet| %>
    <%= pet.name %>
      <% if pet.adoption_status == "Pending" %> 
      <p><%= link_to "<button>Approve #{pet.name}'s Application</button>".html_safe, "/admin/applications/#{@application.id}?pet_id=#{pet.id};adoption_status=Approved", method: :patch, local: true  %></p>
      <p><%= link_to "<button>Reject #{pet.name}'s Application</button>".html_safe, "/admin/applications/#{@application.id}?pet_id=#{pet.id};adoption_status=Rejected", method: :patch, local: true  %></p>
      <% elsif pet.adoption_status == "Approved" %>
      <p><%= "#{pet.name}" %> Approved!</p>
      <% elsif pet.adoption_status == "Rejected" %>
      <p> <%= "#{pet.name}" %> Rejected. </p>
      <% else %>
      <% end %> 
    <% end %>
